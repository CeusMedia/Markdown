{
    "name": "ceus-media/markdown",
    "license": [
        "GPL-3.0+"
    ],
    "authors": [
        {
            "name": "Christian WÃ¼rker",
            "email": "christian.wuerker@ceusmedia.de",
            "homepage": "https://ceusmedia.de/",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "office@ceusmedia.de",
        "jabber": "ceus-media@jabber.org"
    },
    "minimum-stability": "dev",
    "require": {
        "php": "^8.1",
        "league/commonmark": "2.6.0",
        "league/html-to-markdown": "5.1.1",
        "michelf/php-markdown": "2.0.0"
    },
    "require-dev": {
        "kzykhys/ciconia": "v1.0.3",
        "erusev/parsedown": "2.0.x-dev",
        "picas/markdown-extended": "*",
        "cebe/markdown": "1.2.1",
        "phpstan/phpstan": "*",
        "phpstan/phpstan-strict-rules": "*",
        "phpunit/phpunit": "*"
    },
    "suggest": {
        "erusev/parsedown": "Better Markdown Parser in PHP",
        "picas/markdown-extended": "A PHP parser for the Markdown Extended syntax",
        "cebe/markdown": "A super fast, highly extensible markdown parser for PHP"
    },
    "autoload": {
        "psr-4": {
            "CeusMedia\\Markdown\\": ["src/"]
        }
    },
    "scripts": {
        "dev:all": [
            "@dev:test-syntax",
            "@dev:phpstan",
            "@dev:phpunit"
        ],
        "dev:phpstan": [
            "@dev:install-quiet",
            "XDEBUG_MODE=off vendor/bin/phpstan analyse --configuration=util/phpstan.neon --memory-limit=1G --verbose"
        ],
        "dev:phpstan-clear": [
            "@dev:install-quiet",
            "vendor/bin/phpstan clear-result-cache --verbose"
        ],
        "dev:phpstan-save": [
            "@dev:install-quiet",
            "vendor/bin/phpstan analyse --configuration util/phpstan.neon --generate-baseline util/phpstan-baseline.neon"
        ],
        "dev:phpunit": [
            "XDEBUG_MODE=coverage php vendor/bin/phpunit --configuration util/phpunit.xml --testsuite units"
        ]
    }
}
